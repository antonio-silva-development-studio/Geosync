generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[]
}

model Project {
  id                  String               @id @default(uuid())
  organizationId      String
  name                String
  description         String?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  apiCollections      ApiCollection[]
  documents           Document[]
  environments        Environment[]
  organization        Organization         @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  variableDefinitions VariableDefinition[]
  tags                Tag[]                @relation("ProjectToTag")
}

model Tag {
  id        String    @id @default(uuid())
  name      String    @unique
  color     String    @default("#3b82f6")
  isEnabled Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  projects  Project[] @relation("ProjectToTag")
}

model Environment {
  id             String          @id @default(uuid())
  projectId      String
  name           String
  slug           String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  project        Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  variableValues VariableValue[]
}

model VariableDefinition {
  id             String          @id @default(uuid())
  projectId      String
  key            String
  description    String?
  defaultValue   String?
  isSecret       Boolean         @default(false)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  project        Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  variableValues VariableValue[]

  @@unique([projectId, key])
}

model VariableValue {
  id            String             @id @default(uuid())
  environmentId String
  definitionId  String
  value         String
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  environment   Environment        @relation(fields: [environmentId], references: [id], onDelete: Cascade)
  definition    VariableDefinition @relation(fields: [definitionId], references: [id], onDelete: Cascade)

  @@unique([environmentId, definitionId])
}

model ApiCollection {
  id        String   @id @default(uuid())
  projectId String
  name      String
  version   Int      @default(1)
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model Document {
  id        String   @id @default(uuid())
  projectId String
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model System {
  id           String   @id @default("config")
  passwordHash String
  name         String?  @default("User")
  email        String?  @default("user@example.com")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model AccessToken {
  id         String   @id @default(uuid())
  name       String
  tokenHash  String   @unique
  lastUsedAt DateTime?
  createdAt  DateTime @default(now())
  expiresAt  DateTime?
}
